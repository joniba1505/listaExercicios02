using System;

namespace listaExercicios02
{
    class Program
    {
        static void Main(string[] args)
        {
            int valor1 = 0;
            int valor2 = 0;
            int valor3 = 0;
int maior = 0;
int menor = 0;
            
            try {
                Console.WriteLine("Digite o primeiro valor:");
                valor1 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Valor1: " + valor1);
            }
catch (Exception ex) {
    Console.WriteLine("Valor1 inválido! " + ex.Message);
}
        
            try {
                Console.WriteLine("Digite o segundo valor:");
                valor2 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Valor2: " + valor2);
            }
catch (Exception ex) {
    Console.WriteLine("Valor2 inválido! " + ex.Message);
}
        
                    try {
                Console.WriteLine("Digite o terceiro valor:");
                valor3 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Valor3: " + valor3);
            }
catch (Exception ex) {
    Console.WriteLine("Valor3 inválido! " + ex.Message);
}

if (valor1 <= valor2 && valor1 <= valor3) {
    menor = valor1;
}
        else if (valor2 <= valor3 && valor2 <= valor1) {
            menor = valor2;
        }
        else {
            menor = valor3;
        }

Console.WriteLine("Menor valor: " + menor);
        
        if (valor1 >= valor2 && valor1 >= valor3) {
    maior = valor1;
}
        else if (valor2 >= valor3 && valor2 >= valor1) {
            maior = valor2;
        }
        else {
            maior = valor3;
        }

        Console.WriteLine("Maior valor: " + maior);

        

        }
    }
}
